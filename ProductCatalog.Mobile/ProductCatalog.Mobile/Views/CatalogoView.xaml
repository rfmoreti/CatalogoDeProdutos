<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCatalog.Mobile.Views.CatalogoView">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar x:Name="vBusca" Placeholder="Faça sua busca aqui" />
            <ListView x:Name="vCatalogo" ItemsSource="">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Titulo}" Detail="{Binding Descricao}" ImageSource="{Binding Imagem}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>